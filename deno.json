{
  "tasks": {
    "dev": "sh -c 'deno task dev:build & deno task dev:vite & deno task dev:www; wait'",
    "dev:build": "vite build --mode development --watch",
    "dev:vite": "vite --host",
    "dev:www": "deno task --unstable --quiet --config=./www/deno.json www:dev",
    "build": "vite build --mode production && deno task build:www",
    "build:www": "deno task --unstable --quiet --config=./www/deno.json build",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "lint": "deno lint src/",
    "www": "deno task --unstable --quiet --config=./www/deno.json dev",
    "deploy": "deno install && deno task www:install && deno task build",
    "www:install": "cd www && deno install"
  },
  "imports": {
    "@1inch/byte-utils": "npm:@1inch/byte-utils@3.1.7",
    "@1inch/cross-chain-sdk": "npm:@1inch/cross-chain-sdk@1.1.1",
    "@1inch/fusion-sdk": "npm:@1inch/fusion-sdk@2.4.3",
    "@lifi/sdk": "npm:@lifi/sdk@3.13.2",
    "@reown/appkit": "npm:@reown/appkit@1.8.13",
    "@reown/appkit-adapter-ethers": "npm:@reown/appkit-adapter-ethers@1.8.13",
    "@std/testing": "jsr:@std/testing@1.0.16",
    "@std/assert": "jsr:@std/assert@1.0.15",
    "assert": "npm:assert@2.1.0",
    "autoprefixer": "npm:autoprefixer@10.4.21",
    "ethers": "npm:ethers@6.15.0",
    "lit": "npm:lit@3.3.1",
    "lit-element": "npm:lit-element@4.2.1",
    "lit-html": "npm:lit-html@3.3.1",
    "postcss": "npm:postcss@8.5.6",
    "terser": "npm:terser@5.44.1",
    "viem": "npm:viem@2.38.6",
    "vite": "npm:vite@7.2.0"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "ES2020"],
    "types": ["vite/client"],
    "strict": true
  },
  "unstable": [
    "bare-node-builtins",
    "detect-cjs",
    "node-globals",
    "unsafe-proto",
    "sloppy-imports"
  ]
}
