{
  "version": "0.1.0",
  "tasks": {
    "dev": "sh -c 'deno task dev:build & deno task dev:vite & deno task dev:www; wait'",
    "dev:build": "vite build --mode development --watch",
    "dev:vite": "vite --host",
    "dev:www": "deno task --unstable --quiet --config=./www/deno.json www:dev",
    "build": "vite build --mode production && deno task post-build && deno task build:www",
    "build:versioned": "vite build --mode production && deno task post-build",
    "build:release": "deno run --allow-read --allow-write --allow-run --allow-env scripts/release/build-release.ts",
    "build:www": "deno task --unstable --quiet --config=./www/deno.json build",
    "release:update-notes": "deno run --allow-read --allow-net --allow-env scripts/release/update-release-notes.ts",
    "build:dev": "vite build --mode development",
    "post-build": "deno run --allow-read --allow-write --allow-env scripts/release/post-build.ts",
    "manifest:update": "deno task post-build",
    "preview": "vite preview",
    "lint": "deno lint src/",
    "www": "deno task --unstable --quiet --config=./www/deno.json dev",
    "deploy": "deno task build:versioned && cd www && deno install && deno task build",
    "www:install": "cd www && deno install"
  },
  "imports": {
    "@1inch/cross-chain-sdk": "npm:@1inch/cross-chain-sdk@1.0.0",
    "@1inch/fusion-sdk": "npm:@1inch/fusion-sdk@2.0.0",
    "@lifi/sdk": "npm:@lifi/sdk@3.13.2",
    "@octokit/rest": "npm:@octokit/rest@21.0.2",
    "@reown/appkit": "npm:@reown/appkit@1.8.12",
    "@reown/appkit-adapter-ethers": "npm:@reown/appkit-adapter-ethers@1.8.12",
    "@std/testing": "jsr:@std/testing@1.0.0",
    "@std/assert": "jsr:@std/assert@1.0.0",
    "autoprefixer": "npm:autoprefixer@10.4.21",
    "ethers": "npm:ethers@6.13.4",
    "lit": "npm:lit@3.3.1",
    "lit-element": "npm:lit-element@4.2.1",
    "lit-html": "npm:lit-html@3.3.1",
    "postcss": "npm:postcss@8.5.6",
    "terser": "npm:terser@5.37.0",
    "viem": "npm:viem@2.38.5",
    "vite": "npm:vite@7.1.12"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "ES2020"],
    "types": ["vite/client"],
    "strict": true
  },
  "unstable": [
    "bare-node-builtins",
    "detect-cjs",
    "node-globals",
    "unsafe-proto",
    "sloppy-imports"
  ]
}
