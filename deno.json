{
  "tasks": {
    "dev": "sh -c 'deno task dev:build & deno task dev:vite & deno task dev:www; wait'",
    "dev:build": "vite build --mode development --watch",
    "dev:vite": "vite --host",
    "dev:www": "deno task --unstable --quiet --config=./www/deno.json www:dev",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "lint": "deno lint src/",
    "www": "deno task --unstable --quiet --config=./www/deno.json dev"
  },
  "imports": {
    "@lifi/sdk": "npm:@lifi/sdk@3.12.14",
    "@reown/appkit": "npm:@reown/appkit@1.8.12",
    "@reown/appkit-adapter-ethers": "npm:@reown/appkit-adapter-ethers@1.8.12",
    "@std/testing": "jsr:@std/testing@1.0.0",
    "@std/assert": "jsr:@std/assert@1.0.0",
    "autoprefixer": "npm:autoprefixer@10.4.21",
    "ethers": "npm:ethers@6.13.4",
    "lit": "npm:lit@3.3.1",
    "lit-element": "npm:lit-element@4.2.1",
    "lit-html": "npm:lit-html@3.3.1",
    "postcss": "npm:postcss@8.5.6",
    "terser": "npm:terser@5.37.0",
    "viem": "npm:viem@2.38.5",
    "vite": "npm:vite@7.1.12"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "ES2020"],
    "types": ["vite/client"],
    "strict": true
  },
  "unstable": [
    "bare-node-builtins",
    "detect-cjs",
    "node-globals",
    "unsafe-proto",
    "sloppy-imports"
  ]
}
